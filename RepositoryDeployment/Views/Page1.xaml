										</StackPanel>
								</TreeViewItem.Header>
								<TreeViewItem Header='\Repository' IsExpanded='True'>
										<TextBlock Text='Repository.db' />
										<TextBlock Text='sqlite3.exe' />
										<TreeViewItem Header='\UnitDiary'>
												<TreeViewItem Header='2019'>
														<TextBlock Text='2119.pdf' />
														<TextBlock Text='2120.pdf' />
