								</TreeViewItem>
						</TreeViewItem>
				</TreeView>
				<Button Content='Continue' Grid.Row='1' Grid.Column='1' HorizontalAlignment='Right' Command='{Binding MovePage2}' />
		</Grid>
</Page>
